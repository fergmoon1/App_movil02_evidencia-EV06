
<?xml version="1.0" encoding="UTF-8"?>
<root>
    <head>
        <meta charset="utf-8"/>
        <meta content="width=device-width, initial-scale=1.0" name="viewport"/>
        <title>Account</title>
        <script src="https://cdn.tailwindcss.com"/>
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet"/>
    </head>
    <body class="bg-white text-gray-900">
        <div class="max-w-md mx-auto p-4">
            <div class="flex items-center justify-between mb-6">
                <i class="fas fa-times text-xl"/>
                <h1 class="text-xl font-bold">Account</h1>
                <div/>
            </div>
            <div class="flex flex-col items-center mb-6">
                <img alt="Profile picture of a smiling woman with long hair" class="w-24 h-24 rounded-full mb-4" height="100" src="https://storage.googleapis.com/a1aa/image/nXKEFwVfVyvAFXieCgdTqUakTZIQ7ivnDWNJNT75lBk.jpg" width="100"/>
                <h2 class="text-2xl font-bold">Megan Fox</h2>
                <p class="text-gray-500">@megan_fox</p>
                <p class="text-gray-500">Joined in 2020</p>
            </div>
            <button class="w-full bg-gray-100 text-gray-900 py-2 rounded-md mb-6">Edit Profile</button>
            <div class="mb-6">
                <div class="flex justify-between items-center mb-4">
                    <span class="text-gray-900">Email</span>
                    <span class="text-gray-500">megan.fox@gmail.com</span>
                </div>
                <div class="flex justify-between items-center">
                    <span class="text-gray-900">Phone Number</span>
                    <span class="text-gray-500">+12345678</span>
                </div>
            </div>
            <div class="mb-6">
                <h3 class="text-xl font-bold mb-4">Settings</h3>
                <div class="flex justify-between items-center">
                    <span class="text-gray-900">Change Password</span>
                    <i class="fas fa-chevron-right text-gray-500"/>
                </div>
            </div>
            <button class="w-full bg-gray-100 text-gray-900 py-2 rounded-md">Log Out</button>
        </div>
    </body>
</root>